<%= render "shared/page_title", title: "Want to signup?" %>

<%= render "shared/errors", obj:@cook %>
<div class="column col-4 col-lg-6 col-md-8 col-sm-12 col-mx-auto">
  <%= form_for @cook do |f| %>
    <div class="form-group">
      <%= f.label :cook_name, "Cook name", class: "form-label" %>
      <%= f.text_field :cook_name, class: "form-input" %>

      <%= f.label :email, "Email", class: "form-label"%>
      <%= f.email_field :email, class: "form-input" %>

      <%= f.label :password, "Password", class: "form-label"%>
      <%= f.password_field :password, class: "form-input" %>

      <%= f.label :password_confirmation, "Confirm password", class: "form-label"%>
      <%= f.password_field :password_confirmation, class: "form-input" %>

    </div>
    <%= f.submit "Create my account", class:"btn btn-main" %>
  <% end %>
</div>